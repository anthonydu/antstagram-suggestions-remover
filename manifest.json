{
  "name": "Antstagram - Suggestions Remover",
  "version": "1.0.3",
  "description": "Remove all suggestions and automatically load older posts!",
  "manifest_version": 3,
  "author": "Anthony Du",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Antstagram - Suggestions Remover"
  },
  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/*"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ]
}
